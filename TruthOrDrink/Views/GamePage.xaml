<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrink.Views.GamePage"
             Title="Game">
    <Grid ColumnDefinitions="*"
          RowDefinitions="auto, auto, auto, auto, *"
          VerticalOptions="FillAndExpand"
          Padding="30,0">
        
        <Label Grid.Row="0" x:Name="QuestionNumber" Text="Vraag: x / x" />
        <Label Grid.Row="1" x:Name="QuestionText" Text="Placeholder vraag" />

        <Grid Grid.Row="2"
              RowDefinitions="auto, auto, auto"
              ColumnDefinitions="*, auto, *">
            
            <Label Grid.Row="0"
                   Grid.Column="0"
                   Text="Speler 1"/>
            <Label x:Name="QuestionPlayerNameOne"
                   Grid.Row="1"
                   Grid.Column="0"/>
            <Label Grid.Row="2"
                   Text="Antwoord:" />
            <Picker x:Name="AnswerPlayerOne"
                    Grid.Row="3"
                    Grid.Column="0"/>

            <BoxView Grid.RowSpan="3"
                     Grid.Column="1"
                     BackgroundColor="Black"
                     WidthRequest="1"
                     Margin="15,0"/>

            <Label Grid.Row="0"
                   Grid.Column="2"
                   Text="Speler 2"/>
            <Label x:Name="QuestionPlayerNameTwo"
                   Grid.Row="1"
                   Grid.Column="2"/>
            <Label Grid.Row="2"
                   Text="Antwoord:" />
            <Picker x:Name="AnswerPlayerTwo"
                    Grid.Row="3"
                    Grid.Column="2"/>   
        </Grid>

        <Button x:Name="NextQuestionBtn"
                Grid.Row="4"
                Text="Volgende"
                WidthRequest="100"
                VerticalOptions="End"
                Clicked="NextQuestionBtn_Clicked"/>

    </Grid>
</ContentPage>