<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrink.Views.NewPage1"
             Title="NewPage1">

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="HomeToolbarItem"
                     Text="HOME"
                     Clicked="HomeToolbarItem_Clicked" />
        <ToolbarItem x:Name="LogoutToolbarItem"
                     Text="Logout"
                     Clicked="LogoutToolbarItem_Clicked" />
    </ContentPage.ToolbarItems>

    <VerticalStackLayout>

        <FlexLayout Direction="Row"
                    Margin="0, 0, 0, 25">
            <Button x:Name="GetQuestionsBtn"
                    Text="Get Questions"
                    Clicked="GetQuestionsBtn_Clicked" />

            <Button x:Name="CreateQuestionBtn"
                    Text="Create Question"
                    Clicked="CreateQuestionBtn_Clicked" />
        </FlexLayout>

        <FlexLayout x:Name="QuestionsListLayout"
                    Direction="Column">
            
        </FlexLayout>
    </VerticalStackLayout>
</ContentPage>